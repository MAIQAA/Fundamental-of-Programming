#include <iostream>
using namespace std;
int main()
{
    int a[2][2];
    int b[2][2];
    cout<<"Enter all elements of array\n";  
    for(int i=0;i<2;i++)
	{
    for (int j=0;j<2;j++)
	{
        cout<<"Enter element of 1st matrix ["<<i<<"]["<<j<<"]\n";
        cin>>a[i][j];
        cout<<"Enter element of 2nd matrix ["<<i<<"]["<<j<<"]\n";
        cin>>b[i][j];     
    }
    cout<<endl;
    }
    
    cout<<"\nFirst Matrix\n";
     for(int i=0;i<2;i++){
    for (int j=0;j<2;j++){
        
        cout<<a[i][j]<<"\t";

    }
    cout<<endl;
    }
cout<<"\nSecond Matrix\n";
     for(int i=0;i<2;i++){
    for (int j=0;j<2;j++){    
        cout<<b[i][j]<<"\t";
    }
    cout<<endl;
    }
    
    cout<<"\nSum of two Matrices\n";
     for(int i=0;i<2;i++)
	 {
    for (int j=0;j<2;j++)
	{
    cout<<a[i][j]+b[i][j]<<"\t";
    }
    cout<<endl;
    }
    return 0;
}
