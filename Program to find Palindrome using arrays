#include<iostream>
#include<conio.h>
using namespace std;
int main()
{
	int num[5],i;
	cout<<"Enter an Integer : "<<endl;
	for(i=0;i<5;i++)
	{
		cin>>num[i];
	}
	cout<<"The Array : ";
	for(i=0;i<5;i++)
	{
		cout<<num[i]<<" ";
	}
	cout<<endl;
	cout<<"Array in Reverse Order : ";
	for(i=4;i>=0;i--)
	{
		cout<<num[i]<<" ";
	}
	cout<<endl;
	
	if((num[0]==num[4]))
	cout<<num[0]<<" and "<<num[4]<<" are equal."<<endl;
	if((num[1]==num[3]))
	{
	cout<<num[1]<<" and "<<num[3]<<" are equal."<<endl;
	cout<<"It is Palindrome"<<endl;
    }
	
	if((num[0]!=num[4]))
	cout<<num[0]<<" and "<<num[4]<<" are not equal."<<endl;
	if((num[1]!=num[3]))
	{
	cout<<num[1]<<" and "<<num[3]<<" are not equal."<<endl;
	cout<<"It is not Palindrome"<<endl;
    }
}
